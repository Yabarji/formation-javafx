<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <bottom>
      <Button fx:id="bouton" alignment="CENTER" mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets top="5.0" />
         </opaqueInsets>
      </Button>
   </bottom>
   <center>
      <ImageView fx:id="image" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
