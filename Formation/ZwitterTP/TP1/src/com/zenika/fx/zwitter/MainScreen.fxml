<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.zenika.fx.zwitter.MainController">

	<top>
		<HBox>
			<children>
				<TextField HBox.hgrow="ALWAYS" prefWidth="200.0" maxWidth="Infinity"/>
				<Button mnemonicParsing="false" text="Search"/>
			</children>
		</HBox>
	</top>

	<center>
		<AnchorPane>
			<children>
				<ListView fx:id="timeline" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="350.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
						AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
			</children>
		</AnchorPane>
	</center>

	<bottom>
		<HBox prefHeight="-1.0" prefWidth="-1.0">
			<children>
				<TextArea prefHeight="100.0" prefWidth="200.0" wrapText="true" HBox.hgrow="ALWAYS"/>
				<Button maxHeight="1.7976931348623157E308" maxWidth="200.0" mnemonicParsing="false" text="Send" HBox.hgrow="NEVER"/>
			</children>
		</HBox>
	</bottom>

</BorderPane>
